{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PHE Team Data",
  "type": "object",
  "required": ["version", "updated", "items"],
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "updated": { "type": "string", "minLength": 10 },

    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "roles", "purpose"],
        "properties": {
          "id": { "type": "string", "minLength": 2 },

          "category": { "type": "string", "minLength": 2 },

          "name": { "type": "string", "minLength": 2 },

          "image": { "type": "string", "minLength": 6 },

          "roles": {
            "type": "array",
            "minItems": 1,
            "maxItems": 10,
            "items": { "type": "string", "minLength": 2 }
          },

          "purpose": { "type": "string", "minLength": 8 },

          "email": { "type": "string", "minLength": 6 },
          "phone": { "type": "string", "minLength": 6 },
          "location": { "type": "string", "minLength": 2 },

          "url": { "type": "string", "minLength": 6 },
          "cta": { "type": "string", "minLength": 2 },

          "newTab": { "type": "boolean" },

          "featured": { "type": "boolean" },
          "order": { "type": "number" },

          "tags": { "type": "array", "items": { "type": "string", "minLength": 2 } }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
